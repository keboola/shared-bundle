{
    "name": "keboola/job-queue-shared-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "keboola/retry": "^0.5.0",
        "symfony/http-kernel": "^5.1",
        "symfony/dependency-injection": "^5.1",
        "doctrine/doctrine-bundle": "^2.1"
    },
    "require-dev": {
        "keboola/coding-standard": "^13.0",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\JobQueueSharedBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\JobQueueSharedBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "lock": false
    },
    "scripts": {
        "phpunit": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@composer validate --no-check-publish --no-check-all",
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ],
        "ci": [
            "@build"
        ]
    }
}
